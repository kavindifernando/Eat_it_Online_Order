<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/interface1"
    tools:context=".AdmAddNewFoodActivity">

    <Button
        android:id="@+id/adm_add_food_btn"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/adm_buttons_view"
        android:padding="20dp"
        android:text="Insert"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adm_add_price_ediTxt2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/adm_add_price_ediTxt2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/adm_input_design"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adm_add_description_ediTxt2" />

    <EditText
        android:id="@+id/adm_add_foodName_ediTxt2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/adm_input_design"
        android:ems="10"
        android:hint="Food Name"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adm_add_Food_image" />

    <TextView
        android:id="@+id/adm_add_Header"
        android:layout_width="288dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:text="Add New Food"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ad_add_back_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196">

    </Button>

    <EditText
        android:id="@+id/adm_add_description_ediTxt2"
        android:layout_width="305dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/adm_input_design"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adm_add_foodName_ediTxt2" />

    <ImageView
        android:id="@+id/adm_add_Food_image"
        android:layout_width="256dp"
        android:layout_height="149dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adm_add_Header"
        app:srcCompat="@drawable/adm_camera" />


</androidx.constraintlayout.widget.ConstraintLayout>