<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Final_Order"
    android:background="@drawable/interface1">

    <TextView
        android:id="@+id/topic3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/topic_1_1"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"

        android:textAlignment="center"
        android:layout_margin="50dp"></TextView>

    <EditText
        android:id="@+id/Crt_Customer_name_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic3"
        android:hint="Name"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/red"></EditText>
    <EditText
        android:id="@+id/Crt_Customer_Contact_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Crt_Customer_name_1"
        android:hint="Phone Number"
        android:inputType="phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/red"/>


    <EditText
        android:id="@+id/Crt_Customer_Address_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Crt_Customer_Contact_1"
        android:hint="Address"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/red"
         />


    <EditText
        android:id="@+id/Crt_Customer_postal_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"

        android:inputType="number"
        android:layout_below="@id/Crt_Customer_Address_1"
        android:hint="Postal Code"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/Crt_Customer_email_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Crt_Customer_postal_1"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/red"
         />
    <RadioGroup
        android:id="@+id/radioButtonGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Crt_Customer_email_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <RadioButton
            android:id="@+id/radio11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit/Debit Card"
            android:textColor="@color/red"/>
        <RadioButton
            android:id="@+id/radio22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash On Delivery"
            android:textColor="@color/red"></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/button2_ccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Crt_Customer_email_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button2"
        android:text="@string/btn_con"
        android:textAlignment="center"
        android:textColor="@color/white" />



</RelativeLayout>