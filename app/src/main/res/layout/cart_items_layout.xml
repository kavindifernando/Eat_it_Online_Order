<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cart_food_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="0.11"
            />

        <TextView
            android:id="@+id/cart_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cart_food_image"
            android:layout_toRightOf="@id/cart_food_image"
            android:text="Price"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/cart_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:textColor="@color/white"
            android:layout_toEndOf="@+id/cart_food_image"
            android:layout_below="@id/cart_food_name"

            android:layout_toRightOf="@id/cart_food_image"

            android:text="Price"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/cart_food_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cart_food_image"
            android:layout_below="@id/cart_food_price"
android:textColor="@color/white"
            android:layout_toRightOf="@id/cart_food_image"
            android:text="TextView"
            android:textSize="20dp"/>

